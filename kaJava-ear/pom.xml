<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>hu.food.kaJava</groupId>
		<artifactId>kaJava-app</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>kaJava-ear</artifactId>
	<packaging>ear</packaging>


	<dependencies>
		<dependency>
			<groupId>hu.food.kaJava</groupId>
			<artifactId>kaJava-service</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		
		<dependency>
			<groupId>hu.food.kaJava</groupId>
			<artifactId>kaJava-service-api</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>hu.food.kaJava</groupId>
			<artifactId>kaJava-core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>hu.food.kaJava</groupId>
			<artifactId>kaJava-web</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>

		<dependency>
            <groupId>hu.food</groupId>
            <artifactId>kaJava-web</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <type>pom</type>
        </dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<version>7</version>
					<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
					<skinnyWars>true</skinnyWars>
					<modules>
						<ejbModule>
							<groupId>hu.food.kaJava</groupId>
							<artifactId>kaJava-service</artifactId>
							<bundleFileName>kaJava-service.jar</bundleFileName>
						</ejbModule>

						<ejbModule>
							<groupId>hu.food.kaJava</groupId>
							<artifactId>kaJava-core</artifactId>
							<bundleFileName>kaJava-core.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>hu.food.kaJava</groupId>
							<artifactId>kaJava-web</artifactId>
							<contextRoot>kaJava-web</contextRoot>
							<bundleFileName>kaJava-web.war</bundleFileName>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>