<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>hu.food</groupId>
    <artifactId>kaJava</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <modules>
        <module>kaJava-core</module>
        <module>kaJava-service</module>
        <module>kaJava-service-api</module>
        <module>kaJava-web</module>
        <module>kaJava-ear</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <!--SajÃ¡t property-k -->
        <hu.kajava.javaee-api.version>8.0</hu.kajava.javaee-api.version>
        <hu.kajava.orika-core.version>1.5.2</hu.kajava.orika-core.version>
        <hu.kajava.primefaces.version>6.2</hu.kajava.primefaces.version>
        <hu.kajava.lombok.version>1.18.2</hu.kajava.lombok.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>javax</groupId>
                <artifactId>javaee-api</artifactId>
                <version>${hu.kajava.javaee-api.version}</version>
                <scope>provided</scope>
            </dependency>

            <dependency>
                <groupId>ma.glasnost.orika</groupId>
                <artifactId>orika-core</artifactId>
                <version>${hu.kajava.orika-core.version}</version>
            </dependency>

            <dependency>
                <groupId>org.primefaces</groupId>
                <artifactId>primefaces</artifactId>
                <version>${hu.kajava.primefaces.version}</version>
            </dependency>

            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${hu.kajava.lombok.version}</version>
                <scope>provided</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>
</project>