         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-address-sequence" author="cziberez">
        <createSequence cacheSize="20"
                        cycle="false"
                        incrementBy="50"
                        minValue="1"
                        sequenceName="S_ADDRESS"
                        startValue="1000"/>
        <comment>Address sequence létrehozása.</comment>
    </changeSet>

    <changeSet id="create-address-table" author="cziberez">
        <createTable tableName="ADDRESS" remarks="Címek tábla">
            <column name="ID" type="NUMBER(19,0)" remarks="Elsődleges kulcs">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="POSTCODE" type="NUMBER(5,0)" remarks="Irányítószám"/>
            <column name="CITY" type="VARCHAR2(200)" remarks="Város"/>
            <column name="STREET" type="VARCHAR2(250)" remarks="Irányítószám"/>
            <column name="HOUSENUMBER" type="VARCHAR2(6)" remarks="Házszám"/>
            <column name="FLOOR" type="VARCHAR2(4)" remarks="Emelet"/>
            <column name="DOOR" type="VARCHAR2(5)" remarks="Ajtó"/>
        </createTable>
    </changeSet>

    <changeSet id="add-baseentity-to-address" author="cziberez">
        <addColumn tableName="ADDRESS">
            <column name="RECDATE" type="TIMESTAMP(6)" remarks="Felvétel dátuma"/>
            <column name="MODDATE" type="TIMESTAMP(6)" remarks="Módosítás dátuma"/>
            <column name="STATUS" type="VARCHAR2(10)" remarks="Státusz"/>
        </addColumn>
    </changeSet>

